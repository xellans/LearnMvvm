<UserControl x:Class="LearnMvvm.UserControls.SettingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearnMvvm.UserControls"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:LearnMvvm.Model.ViewModel"
             d:DesignHeight="434" d:DesignWidth="540" Background="{DynamicResource Brush1}">
    <UserControl.DataContext>
        <vm:SettingVM/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Margin="10 10 0 0" Width="222" HorizontalAlignment="Left">
            <Button Margin="0 5 10 0" Content="{DynamicResource Lang12}" Command="{Binding DarkTheme}" CommandParameter="Themes\DarkTheme.xaml"></Button>
            <Button Margin="0 5 10 0" Content="{DynamicResource Lang13}" Command="{Binding DarkTheme}" CommandParameter="Themes\LightTheme.xaml"></Button>

            <Button Margin="0 5 10 0" Content="Русский язык" Command="{Binding RussianLangue}" CommandParameter="Langue\Russian.xaml"></Button>
            <Button Margin="0 5 10 0" Content="English langue" Command="{Binding EnglishLangue}" CommandParameter="Langue\English.xaml"></Button>
        </StackPanel>
    </Grid>
</UserControl>
